<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tusueldo.comodin">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_comodin"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/ComodinTheme">
        <activity
            android:name=".InicioActivity"
            android:theme="@style/ComodinTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.LAUNCHER" />

                <data
                    android:host="http://comodin.pe"
                    android:pathPrefix="/comodin"
                    android:scheme="http" />
            </intent-filter>
        </activity>
        <activity android:name=".UserActivity" />
        <activity
            android:name=".SignupActivity"
            android:label="@string/registrar"
            android:theme="@style/ComodinTheme.NoActionBar" />
    </application>

</manifest>