<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_distrito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/margin_large_horizontal"
            android:layout_marginRight="@dimen/margin_large_horizontal"
            android:contentDescription="@string/icon_distrito_description"
            android:src="@drawable/ic_place_black_24dp"
            android:tint="@color/colorPrimaryDark" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_distrito"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <AutoCompleteTextView
                android:id="@+id/campo_distrito"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/distrito"
                android:inputType="textFilter" />

        </android.support.design.widget.TextInputLayout>


    </LinearLayout>


</merge>