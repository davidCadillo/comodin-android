<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.tusueldo.comodin.BienvenidoActivity">

    <nl.dionsegijn.konfetti.KonfettiView
        android:id="@+id/viewKonfetti"
        android:layout_width="344dp"
        android:layout_height="551dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_comodin"
        android:layout_width="200dp"
        android:layout_height="57dp"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.463"
        app:layout_constraintLeft_toRightOf="@+id/viewKonfetti"
        app:layout_constraintRight_toLeftOf="@+id/viewKonfetti"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/tv_informativo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="Ahora ya formas parte de la comunidad"
        android:textColor="#B3000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_comodin" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:scaleY="-1"
        app:layout_constraintLeft_toRightOf="@+id/viewKonfetti"
        app:layout_constraintRight_toLeftOf="@+id/viewKonfetti"
        app:lottie_autoPlay="true"
        app:lottie_fileName="animated_color_options.json"
        app:lottie_loop="true"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_informativo" />

    <TextView
        android:id="@+id/tv_info_recorrido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="EntÃ©rate en este breve recorrido de los beneficios de pertenecer a esta comunidad"
        android:textAlignment="center"
        android:textColor="#B3000000"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/animation_view" />


    <Button
        android:id="@+id/btn_continuar_bienvenida"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_button"
        android:text="@string/continuar_terminos"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_info_recorrido" />


</android.support.constraint.ConstraintLayout>
