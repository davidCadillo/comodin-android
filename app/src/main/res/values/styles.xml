<resources>

    <!-- Base application theme. -->
    <style name="ComodinTheme" parent="ComodinTheme.Base">


    </style>


    <style name="ComodinTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="ComodinTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Error" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="CircularProgress" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="Validado" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/colorValidado</item>
    </style>

    <style name="Hint" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@color/colorValidado</item>
    </style>

    <style name="Normal" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="CampoValidado" parent="TextAppearance.AppCompat">
        <!-- Color que se muestra por defecto cuando no está activado -->
        <item name="android:textColorHint">#FFFFFF</item>
        <!--Tamaño de la letra en el cuadro de texto, no el de la animación(el que aparece arriba)-->
        <item name="android:textSize">18sp</item>
        <item name="colorAccent">#f00013</item>
        <!-- Color de la barra de estado en normal -->
        <item name="colorControlNormal">@color/colorValidado</item>
        <!-- Color de la barra cuando se activa-->
        <item name="colorControlActivated">@color/colorValidado</item>
    </style>


    <style name="TextHint" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">#99FFFFFF</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ComodinTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />


    <style name="ComodinTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextInputLayoutSigin" parent="TextAppearance.AppCompat">
        <!-- Color que se muestra por defecto cuando no está activado -->
        <item name="android:textColorHint">#B3FFFFFF</item>
        <!--Tamaño de la letra en el cuadro de texto, no el de la animación(el que aparece arriba)-->
        <item name="android:textSize">18sp</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Color de la barra de estado en normal -->
        <item name="colorControlNormal">#33FFFFFF</item>
        <!-- Color de la barra cuando se activa-->
        <item name="colorControlActivated">#F2FFFFFF</item>
    </style>

    <style name="RaissedButton" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/colorPrimaryDark</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="android:textColor">#B3FFFFFF</item>

    </style>


</resources>
