<resources>

    <!-- Base application theme. -->
    <style name="ComodinTheme" parent="ComodinTheme.Base">


    </style>


    <style name="ComodinTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="ComodinTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Error" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="CircularProgress" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="Validado" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/colorValidado</item>
    </style>

    <style name="Hint" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@color/colorValidado</item>
    </style>

    <style name="ComodinTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="ComodinTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
